<div class="container">
  <div class="headline search">
    <h1>Search for a model</h1>

    <%= form_for :pages, :url => {:action => :search},
      :html => {:class => "form-search"} do |f| %>

      <%= f.text_field :search,
        {:class=>"input-xlarge search-query",
          :placeholder=>"Enter a search term...",
          :required=>true} %>

      <%= select_tag(:scope,
          grouped_options_for_select([['Category', 
          ['All Categories', 'Robots', 'People', 'Animals',
          'Buildings', 'Vehicles']],
          ['Other',
            ['Username']]]), :class=>"selectpicker") %>

      <%= f.submit "Submit", :class => "btn" %>

    <%end%>
  </div>

  <div class="categories">
  	<div class="search_results_data">
      <ul class="search_restrictions">
        <li>
          <%= @post[:pages][:search] %>
          <span class="count"><%=@models.size%> items</span>
        </li>

        <li>
          <%if @post[:scope] == "Username"%>
            <span class="category_username">
              Username: username
            </span>
          <%else%>
            <span class="category_username">
              Category: <%= @post[:scope] %>
            </span>
          <%end%>
        </li>
      </ul>
    </div>

    <div class="categories">
      <ul class="thumbnails_preferences thumbnail_margin_bottom">
        <%@models.each do |model|%>
          <li class="span2">
            <%= link_to image_tag("/model/#{model.id}/image/1",
                                  alt: "#{model.name}"),
              {controller: "model", action: "show", id:"#{model.id}"},
              {:class=>"thumbnail"} %>

          <div class="line_height">
            <%= link_to "#{model.name}",
              {controller: "model", action: "show", id:"#{model.id}"} %>
          </div>

          <span class="subtext">By:
          <%if !model.creator%>
            Anonymous
          <%else%>
            <%=User.find(model.creator).username%>
          <%end%>
          </span>
          </li>
        <%end%>

      </ul>
    </div>
  </div>

</div>
