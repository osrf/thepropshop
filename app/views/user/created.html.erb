<div>
  <div class="headline">
    <h1>Models I Made</h1>
  </div>

  <%if @models.empty?%>
    <p>Get creative, and make a model.</p>
  <%else%>
    <div class="row categories"> 
      <ul class="thumbnails_preferences thumbnail_margin_bottom">
        <%@models.each do |model|%>
          <li class="span2">
            <%= link_to image_tag("/model/#{model.id}/image/1",
                                  alt: "#{model.name}"),
              {controller: "model", action: "show", id:"#{model.id}"},
              {:class=>"thumbnail"} %>

            <div class="line_height">
              <%= link_to "#{model.name}",
                {controller: "model", action: "show", id:"#{model.id}"} %>
            </div>

            <span class="subtext">
              <i class="icon-circle-arrow-up"></i>  
              <%= model.updated_at.strftime("%b %d, %Y")%>
            </span>
            <span class="subtext"></span>
            <br/>

            <button class="btn btn-mini" type="button"
              style="margin-bottom: 8px; margin-left: 5px"
              onclick=<%="location.href='/model/#{model.id}/edit'"%>>Edit</button>

          </li>
        <%end%>

      </ul>
    </div>
  <%end%>
</div>
