/*star rating found here: http://css-tricks.com/star-ratings/ */
.model_details .rating {
	font-size: 1.1em;
	margin-bottom: 30px;
	text-align: center;
}
.model_details .rating .stars {
	direction: rtl;
	unicode-bidi: bidi-override;
}
.model_details .rating .stars > span {
	color: #ccc;
	display: inline-block;
	position: relative;
	width: 1.1em;
}
/*star rating: removed outline of underlying star on hover */
.model_details .rating .stars > span:hover, .rating .stars > span:hover ~ span {
	color: transparent;
}
/*star rating: sets hover color to gold, and some other stuff...  */
.rating .stars > span:hover:before, .rating .stars > span:hover ~ span:before {
	color: #E8B107;
	content: "\2605";
	left: 0;
	position: absolute;
}
